---
import Layout from "../layouts/Layout.astro";
---

<Layout title="SportHub - Connect & Play">
  <main class="main-layout">
    <div class="background-grid"></div>

    <div class="relative z-10 text-center px-4">
      <div class="mb-6">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-16 h-16 mx-auto text-accent"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25"
          ></path>
        </svg>
      </div>

      <h1 class="heading-main">
        Your Next Game is
        <span class="text-gradient-accent"> Waiting </span>
      </h1>

      <p class="paragraph-main">
        Discover sports events, find teammates, and organize your own
        activities. Effortlessly.
      </p>

      <div class="mt-10">
        <a href="/register" class="btn-primary">Join the Community</a>
      </div>
    </div>
  </main>
</Layout>
