---
import NavItem from "./NavItem.astro";
import UserActions from "./UserActions.tsx"; // Presupunând că este .tsx
---

<header
  class="bg-slate-900/80 border-b border-slate-700/50 backdrop-blur-sm sticky top-0 z-50"
>
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0 flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-8 h-8 text-orange-500"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25"
            ></path>
          </svg>
          <span class="font-bold text-xl text-white hidden sm:block"
            >SportHub</span
          >
        </a>

        <div class="hidden sm:ml-6 sm:flex sm:space-x-2">
          <NavItem href="/" label="Home" />
          <NavItem href="/events" label="Events" />
          <NavItem href="/about" label="About" />
        </div>
      </div>

      <div class="flex items-center">
        <UserActions client:load />
      </div>
    </div>
  </nav>
</header>
