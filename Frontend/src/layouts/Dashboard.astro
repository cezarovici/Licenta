---
import SidebarComponent from "../components/sidebar/Sidebar";
import NavigationBar from "../components/navbar/NavigationBar.astro";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "SportHub" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body
    class="transition-colors duration-300 bg-[var(--color-bg)] text-[var(--color-text-primary)] min-h-screen flex flex-col"
  >
    <NavigationBar />

    <div class="flex flex-grow">
      <aside class="flex-shrink-0 w-64">
        <SidebarComponent client:load />
      </aside>

      <main class="flex-grow p-6 overflow-y-auto">
        <slot />
      </main>
    </div>
  </body>
</html>
